<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vitymobi.com.todobluemix" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="controller.ToDoAppInstance"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ActivityLogin"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityDashboard"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ActivityTaskList"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ActivityTaskDetails"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ActivityAddNewTask"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ActivityAddressBook"
            android:screenOrientation="portrait"></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
